<script>
function buscarBanco() {
    let input = document.getElementById("search").value.toLowerCase();
    let filas = document.querySelectorAll("#tabla tbody tr");

    filas.forEach(fila => {
        let banco = fila.querySelector("td").textContent.toLowerCase();
        fila.style.display = banco.includes(input) ? "" : "none";
    });
}
</script>

